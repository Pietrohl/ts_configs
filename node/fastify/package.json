{
  "name": "fastify_scaffold",
  "description": "Quick config for Fastify projects",
  "version": "1.0.0",
  "author": "Pietro Labadessa",
  "dependencies": {
    "@fastify/cookie": "^9.0.4",
    "@fastify/cors": "^8.3.0",
    "@fastify/helmet": "^11.0.0",
    "@fastify/swagger": "^8.9.0",
    "@fastify/type-provider-typebox": "^3.5.0",
    "@sinclair/typebox": "^0.31.14",
    "awilix": "^8.0.1",
    "dotenv": "^16.0.3",
    "fastify": "^4.22.0",
    "pino": "^8.15.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@swc/cli": "0.1.62",
    "@swc/core": "1.3.57",
    "@swc/jest": "^0.2.26",
    "@types/jest": "^29.5.1",
    "@types/node": "^20.1.1",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "pino-pretty": "^10.2.0",
    "typescript": "^5.0.4"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "jest": true
    },
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "prettier"
    ],
    "parserOptions": {
      "project": "./tsconfig.json",
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "root": true,
    "rules": {
      "no-console": [
        "error"
      ]
    }
  },
  "eslintIgnore": [],
  "license": "ISC",
  "main": "./src/index.js",
  "repository": {
    "type": "git"
  },
  "scripts": {
    "build": "swc src -d dist",
    "clean": "rm -rf dist",
    "debug": "run-s test:*",
    "dev": "run-p watch:*",
    "lint": "eslint \"{src,apps,libs,test,spec}/**/*.ts\" --fix",
    "start": "node dist/index.js NODE_ENV=production",
    "test": "jest --detectOpenHandles",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "watch:compile": "swc src -w --out-dir dist",
    "watch:dev": "nodemon --watch \"dist/**/*\" -e js ./dist/index.js"
  }
}